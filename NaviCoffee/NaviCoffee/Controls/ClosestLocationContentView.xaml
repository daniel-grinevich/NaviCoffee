<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NaviCoffee.Controls.ClosestLocationContentView">
    <ContentView.Content>
        <StackLayout>
            <RelativeLayout HorizontalOptions="Center" >
                <Frame Style="{StaticResource FrameStyle}">
                    <Grid VerticalOptions="Center" RowSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18" />
                            <RowDefinition Height="15" />
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Text="Closest location: EpiCenter, Charlotte" Style="{StaticResource SubTitleStyle}"/>
                        <Label Grid.Column="0" Grid.Row="1" Text="500 ft away" Style="{StaticResource DistanceAwayStyle}"/>
                    </Grid>
                </Frame>
            </RelativeLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>
